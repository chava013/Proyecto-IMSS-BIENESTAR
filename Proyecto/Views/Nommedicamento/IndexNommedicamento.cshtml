@using Proyecto.Clases;
@model IEnumerable<NommedicamentoCLS>
@{
    ViewData["Title"] = "IndexNommedicamento";
}



<div class="container-fluid px-4">
    <h1 class="mt-4">Medicamentos</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item">Nuevo</li>
        <li class="breadcrumb-item active">Consultar</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Información de los Medicamentos
        </div>
        <div class="card-body">
            <table id="datatablesSimple">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.clvnommedicamento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.nommedicamento)
                        </th>
                        <th>Editar</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (NommedicamentoCLS nom in Model)
                    {
                    <tr>
                        <td>
                            @nom.clvnommedicamento
                        <td>
                            @nom.nommedicamento
                        </td>
                        <td><a asp-action="EditarNommedicamento" asp-controller="Nommedicamento" asp-route-id="@nom.clvnommedicamento"><i class="fa fa-pencil" aria-hidden="true"></i></a></td>
                        <td><a href="#" onclick="Eliminar(@nom.clvnommedicamento)"><i class="fa fa-trash" aria-hidden="true"></i></a></td>

                    </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="~/js/sweetalert.js"></script>
<script src="~/js/alerts.js"></script>


<form asp-action="EliminarNommedicamento" asp-controller="Nommedicamento" method="post" id="frmEliminar">
    <input type="hidden" id="txtclvnommedicamento" name="clvnommedicamento" /> <!--aqui lo ocultamos ya que no es necesario que se vea-->
</form>

<script src="~/js/sweetalert.js"></script>
<script src="~/js/alerts.js"></script>
<script>
    function Eliminar(clvnommedicamento) {
        document.getElementById("txtclvnommedicamento").value = clvnommedicamento;
        mostrarModal().then((res) => {
            if (res.isConfirmed) {
                var frmEliminar = document.getElementById("frmEliminar");
                frmEliminar.submit();
            }
        })
    }
</script>

