@model Proyecto.Clases.UsuarioCLS
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor context;
@{
    ViewData["Title"] = "EditarUsuario";
    Layout = "_LayoutU";
    if (context.HttpContext.Session.GetString("sesion").Equals("1"))
    {
        Layout = "_Layout";
    }
    else
    {
        Layout = "_LayoutU";
    }
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Gestión de Cuenta</h3></div>
                <div class="card-body">
                    <form method="post" asp-action="ActualizarUsuario" asp-controller="Usuario" onsubmit="return submitForm(this);">

                        <div class="form-floating mb-3">
                            <input asp-for="clvdoctor" type="hidden" />
                            <input class="form-control" asp-for="nomusuario" id="inputUsuario" placeholder="nombre de usuario" />
                            <label for="inputUsuario" class="control-label" asp-for="nomusuario">Usuario</label>
                            <span asp-validation-for="nomusuario" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">

                            <input class="form-control" asp-for="contraseña" id="inputContraseña" placeholder="Contraseña" />
                            <label for="inputContraseña" class="control-label" asp-for="contraseña">Contraseña</label>
                            <span asp-validation-for="contraseña" class="text-danger"></span>
                        </div>



                        <div class="mt-4 mb-0">
                            <div class="d-grid"><input type="submit" class="btn btn-primary btn-block" value="Actualizar" /></div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/sweetalert.js"></script>
<script src="~/js/alerts.js"></script>





